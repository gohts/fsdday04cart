<form method="POST" action="/">
    <div class="form-group">
        <label class="font-weight-bold text-secondary" for="item">Item</label>
        <input type="text" name="item" id="item" class="form-control" placeholder="Please enter the item name">
    </div>
    <div class="form-group">
        <label class="font-weight-bold text-secondary" for="qty">Quantity</label>
        <input type="number" name="qty" id="qty" class="form-control" min=1 placeholder="Please enter the quantity">
    </div>
    <div class="form-group">
        <label class="font-weight-bold text-secondary" for="price">Unit Price($)</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">$</span>
            </div>
            <input type="number" name="price" id="price" class="form-control" step="0.01" placeholder="Please enter the unit price">
        </div>
    </div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary btn-lg">Add to Cart</button>
    </div>
</form>

{{#if hasContent}}
<table class="table table-bordered mt-5">
    <thead class="thead-light">
        <tr>
            <th scope="col">Item</th>
            <th scope="col">Qty</th>
            <th scope="col">Price</th>
        </tr>
    </thead>
    <tbody>
        {{#each cartList}}
        <tr>
            <td>{{this.item}}</td>
            <td>{{this.qty}}</td>
            <td>${{this.price}}</td>
        </tr>
        {{/each}}
        <tr>
            <td class="font-weight-bold" colspan="2">Total</td>
            <td>${{totalCost}}</td>
        </tr>
    </tbody>
</table>
{{/if}}